---
// Props para personalizar el componente
export interface Props {
  imageUrl: string;
  title: string;
  subtitle: string;
  buttonText: string;
  buttonLink: string;
}

const { imageUrl, title, subtitle, buttonText, buttonLink } = Astro.props;
---

<section class="relative w-full max-w-4xl mx-auto shadow-lg rounded-lg overflow-hidden mb-6">
  <!-- Imagen de fondo -->
  <img src={imageUrl} alt={title} class="w-full h-60 object-cover" />

  <!-- Contenido sobre la imagen -->
  <div class="absolute inset-0 flex flex-col items-center justify-center bg-black bg-opacity-50 text-white text-center px-4">
    <h2 class="text-2xl font-extrabold italic">{title}</h2>
    <p class="text-lg font-medium">{subtitle}</p>
    <a href={buttonLink} class="mt-3 px-4 py-2 bg-[#144e9c] text-white font-bold rounded-md shadow-md hover:bg-[#103d7a]">
      {buttonText}
    </a>
  </div>
</section>
